<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link rel="shortcut icon" href='@Url.FrontUrl().FileUrl("favicon.ico")' />
  @Html.FrontHtml().Title()
  @Html.FrontHtml().Meta()
  @Html.FrontHtml().RegisterStyles()
</head>
<body>
<div id="body-container">
  <div id="header">
    <div class="global-width">
      <h1 class="logo"><a href='@Url.FrontUrl().PageUrl("Articles")'>@("Sample site".Label())</a></h1>    
      <ul class="quicklink"> 
        <li>[ <a href='@Url.Content("~/admin")'>@("LogOn".Label())</a> ]</li> 
      </ul>    
      @Html.FrontHtml().RenderView("Menu",ViewData)
    </div>
  </div>
  <div id="headline">
    <div class="global-width clearfix">
      <h2>@MenuHelper.Current().LinkText.Label()</h2>
    </div>
  </div>
  <div id="main-container" class="global-width clearfix">
    <div id="main">
      @Html.FrontHtml().Position("main")
    </div>
    <div id="sidebar">
      @Html.FrontHtml().Position("sidebar")
    </div>
  </div>
  <div id="footer" class="global-width">
    <p class="copyright">@("Copyright &copy; 2011 Kooboo team".Label())</p>
  </div>
</div>
  @Html.FrontHtml().RegisterScripts()
</body>
</html>
