@if (Model != null)
{ 
<div>
	<h3 class="title" @ViewHelper.Edit(Model,"Name")>@Html.Raw(Model.Name ?? "")</h3>
	<div class="content">
		<div @ViewHelper.Edit(Model,"EMail")>@Html.Raw(Model.EMail ?? "")</div>
		<div @ViewHelper.Edit(Model,"Address")>@Html.Raw(Model.Address ?? "")</div>
		<div @ViewHelper.Edit(Model,"PhoneNo")>@Html.Raw(Model.PhoneNo ?? "")</div>
		<div @ViewHelper.Edit(Model,"Message")>@Html.Raw(Model.Message ?? "")</div>
	</div>
</div>
}